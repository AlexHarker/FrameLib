<c74object name="fl.now~" module="FrameLib" category="FrameLib Timing">
  <digest> 
        Outputs the current time.
    </digest>
  <description> 
        Time is reported in the specified units. Output is a single value.
    </description>
  <misc name="Parameters">
    <entry name="/units [instantiation enum]">
      <description> 
                Sets the time units used for output.<br />
        <bullet>[0] - samples</bullet>
        <bullet>[1] - ms</bullet>
        <bullet>[2] - seconds</bullet>
      </description>
    </entry>
  </misc>
  <metadatalist>
    <metadata name="author">Alex Harker</metadata>
    <metadata name="tag">FrameLib</metadata>
    <metadata name="tag">FrameLib Timing</metadata>
  </metadatalist>
  <objarglist>
    <objarg name="units" optional="1" type="symbol">
      <digest> 
                Sets the time units used for output
            </digest>
      <description> 
                Sets the time units used for output.
            </description>
    </objarg>
  </objarglist>
