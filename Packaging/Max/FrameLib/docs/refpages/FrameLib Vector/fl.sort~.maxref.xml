      <digest> 
                Sets the ordering of the sorted output
            </digest>
      <description> 
                Sets the ordering of the sorted output.
            </description>
    </objarg>
    <objarg name="indices" optional="1" type="number">
      <digest> 
                Performs the sort on the indices of the input rather than the values
            </digest>
      <description> 
                Performs the sort on the indices of the input rather than the values.
            </description>
    </objarg>
