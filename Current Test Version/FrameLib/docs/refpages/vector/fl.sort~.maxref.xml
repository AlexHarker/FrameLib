<c74object name="fl.sort~" module="FrameLib" category="vector">

	<digest>
		Sorts an input frame in ascending or descending order.
	</digest>

	<description>
		The result is a single value.
	</description>

	<misc name = "Parameters">
		<entry name = "1. /order [enum]">
			<description>
				Sets the ordering of the sorted output.
				<bullet><b>[0] - up</b></bullet><br></br>
				<bullet><b>[1] - down</b></bullet>
			</description>
		</entry>
	</misc>

