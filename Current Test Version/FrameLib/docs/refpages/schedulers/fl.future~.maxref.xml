<c74object name="fl.future~" module="" category="schedulers">

	<digest>
		Schedules frames in the future at a specified time.
	</digest>

	<description>
		Output frames are empty.
	</description>

	<misc name = "Parameters">
		<entry name = "1. /time [double]">
			<description>
				Sets the time of the next frame.
			</description>
		</entry>

		<entry name = "2. /units [enum]">
			<description>
				Sets the time units used to set the interval between frames:<br></br>
				<bullet><b>[0] - samples</b></bullet><br></br>
				<bullet><b>[1] - ms</b></bullet><br></br>
				<bullet><b>[2] - seconds</b></bullet>
			</description>
		</entry>

		<entry name = "3. /mode [enum]">
			<description>
				Sets the interpretation of time:<br></br>
				<bullet><b>[0] - absolute</b></bullet><br></br>
				<bullet><b>[1] - relative</b></bullet>
			</description>
		</entry>
	</misc>

	<!--METADATA-->
	<metadatalist>
		<metadata name="author">Alex Harker</metadata>
		<metadata name="tag">FrameLib</metadata>
		<metadata name="tag">Schedulers</metadata>
	</metadatalist>

	<!--SEEALSO-->
